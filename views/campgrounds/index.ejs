<% layout('/layouts/boilerplate') %>
  <h1>Campgrouns</h1>
  <a href="/campgrounds/new">Create Campground</a>
  <% for (let campground of campgrounds) {%>
    <div class="card mb-3">
      <div class="row">
        <div class="col-md-4">
          <img class="img-fluid" src="<%= campground.image %>" alt="randome image of forest">
        </div>
        <div class="col-md-8">
          <div class="card-body">
            <h5 class="card-title"><%= campground.title %></h5>
            <p class="card-text"><%= campground.description %></p>
            <p class="card-text text-secondary"><small><%= campground.location %></small></p>
            <a class="btn btn-primary" href="/campgrounds/<%= campground._id %>">Details</a>
          </div>
        </div>
      </div>
    </div>
  <% } %>
